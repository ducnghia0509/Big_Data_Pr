# === .env.example ===

# --- Historical Crawler Configurations (historical_crawler.py & hourly_updater.py) ---
# Symbols to crawl, comma-separated. Example: "BTC/USDT,ETH/USDT"
CRYPTO_SYMBOLS="BTC/USDT,ETH/USDT"

# Timeframe for historical data and hourly updates. Example: "1h", "15m", "1d"
CRYPTO_TIMEFRAME="1h"

# Start date for the initial full historical data crawl (ISO 8601 format).
# Example: "2021-01-01T00:00:00Z"
CRYPTO_START_DATE="YYYY-MM-DDTHH:MM:SSZ"

# End date for the initial full historical data crawl (ISO 8601 format).
# Crawler will fetch data UP TO (but not including) this timestamp.
# Leave empty or set to a future date if historical_crawler.py is modified to crawl up to 'now'.
# Example: "2025-05-15T00:00:00Z"
CRYPTO_END_DATE="YYYY-MM-DDTHH:MM:SSZ"

# Exchange ID from CCXT library (e.g., 'binance', 'coinbasepro', 'kraken')
# Used by historical_crawler.py, hourly_updater.py, and ohlcv_1m_producer.py
CRYPTO_EXCHANGE="binance"


# --- Kafka Configuration (ohlcv_1m_producer.py, stream_processor.py) ---
# Kafka broker address(es). Example: "localhost:9092" or "kafka1:9092,kafka2:9092"
KAFKA_BROKER="localhost:9092"

# Kafka topic for 1-minute OHLCV data (used by ohlcv_1m_producer.py and stream_processor.py)
# KAFKA_OHLCV_1M_TOPIC="crypto_ohlcv_1m" # Bỏ comment nếu bạn đã chuyển hoàn toàn sang luồng này

# Kafka topic for ticker data (if you still have a separate ticker producer and stream)
# KAFKA_TICKER_TOPIC="crypto_prices"


# --- Elasticsearch Configuration (Used by multiple scripts: batch_processor, stream_processor, app.py, updaters) ---
# Elasticsearch host IP or hostname.
ELASTICSEARCH_HOST="192.168.30.128" # Hoặc địa chỉ ES của người dùng

# Elasticsearch port.
ELASTICSEARCH_PORT="9200"

# (Optional) Elasticsearch WAN only setting for Spark connector. Default is often "false".
# ES_NODES_WAN_ONLY="false"

# --- OHLCV 1-Minute Chart Producer Configuration (ohlcv_1m_producer.py) ---
# Interval in seconds to fetch 1-minute OHLCV data for the real-time chart.
MINUTE_CHART_FETCH_INTERVAL=60

